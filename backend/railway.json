{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 10,
    "startCommand": "gunicorn jaelleshop.wsgi:application --bind 0.0.0.0:$PORT --log-level debug"
  }
} 